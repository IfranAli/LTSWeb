{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto",
    "bracketSpacing": true,
    "useTabs": false,
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.html",
            "options": {
                "printWidth": 120
            }
        }
    ]
}